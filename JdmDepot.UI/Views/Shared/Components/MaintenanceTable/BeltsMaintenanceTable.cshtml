@using JdmDepot.UI.Util
@model JdmDepot.UI.Views.Shared.Components.MaintenanceTable.BeltsMaintenanceTable

@{
	var hasNotes = Model.BeltMaintenanceItems.Any(x => !string.IsNullOrEmpty(x.Notes));
}

<table class="table table-hover table-responsive-xxl">
	<thead>
	<tr>
		<th>@Resources.BeltsTable_Name_Text</th>
		<th>@Resources.BeltsTable_ManufacturerPartNumber_Text</th>
		<th>@Resources.BeltsTable_AlternativePartNumbers_Text</th>
		<th>@Resources.BeltsTable_Links_Text</th>
		@if (hasNotes)
		{
			<th>@Resources.BeltsTable_Notes_Text</th>
		}
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model.BeltMaintenanceItems.OrderBy(x => x.Name))
	{
		/*var sortedPartNumbers = item.
			.Select(x => (Item: x, Weight: x.IsManufacturerPartNumber ? 0 : 1))
			.OrderBy(x => x.Weight)
			.ThenBy(x => x.Item.Merge(
				manufacturerPartNumber => manufacturerPartNumber.PartNumber,
				alternatePartNumber => alternatePartNumber.PartNumber))
			.ToArray();*/

		var sortedLinks = item.Links
			.Select(x => x.Merge(
				advanceAuto => (Text: Resources.AdvanceAuto_Text, Url: advanceAuto.GetUrl()),
				amazon => (Text: Resources.Amazon_Text, Url: amazon.GetUrl()),
				rockAuto => (Text: Resources.RockAuto_Text, Url: rockAuto.GetUrl())))
			.OrderBy(x => x.Text)
			.ToArray();

		<tr>
			<td>@item.Name</td>
			<td>@item.ManufacturerPartNumber</td>
			<td>
				<ul class="list-unstyled list-inline">
					@foreach (var altPartNumber in item.AlternativePartNumbers)
					{
						<li class="list-inline-item">@altPartNumber</li>
					}
				</ul>
			</td>
			<td>
				<ul class="list-unstyled">
					@foreach (var link in sortedLinks)
					{
						<li><a href="@link.Url" target="_blank">@link.Text</a></li>
					}
				</ul>
			</td>
			@if (hasNotes)
			{
				<td>@Html.Raw(Markdig.Markdown.ToHtml(item.Notes))</td>
			}
		</tr>
	}
	</tbody>
</table>
